<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:id="@+id/relativeLayoutDisconnectedResult">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/imageViewNext" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <ImageView
                android:id="@+id/imageViewUnconnectedResult"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@mipmap/ic_result_red"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:text="50"
                android:id="@+id/textView1"
                android:textSize="100sp"
                android:gravity="center"
                android:layout_alignTop="@+id/imageViewUnconnectedResult"
                android:layout_alignBottom="@+id/imageViewUnconnectedResult"
                android:layout_alignStart="@+id/imageViewUnconnectedResult"
                android:layout_alignEnd="@+id/imageViewUnconnectedResult"
                android:textColor="#ffffffff"
                android:textAlignment="gravity" />
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/imageViewCentralButton"
                android:src="@mipmap/ic_central_button"
                android:scaleType="fitCenter"
                android:layout_below="@+id/imageViewUnconnectedResult"
                android:gravity="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:textSize="25sp"
                android:layout_below="@+id/imageViewCentralButton"
                android:gravity="center" />
        </RelativeLayout>
    </ScrollView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewNext"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@mipmap/ic_next_button_blue" />

</RelativeLayout>


