<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.syncbridge.bestconnections.JournalCommentsActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Use This Area To Record Your Comments and Thoughts on Your Core Beliefs"
        android:id="@+id/textViewQuestion"
        android:gravity="center"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewQuestion"
        android:id="@+id/editTextJournalComment"
        android:layout_above="@+id/imageViewStartWriting"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/edit_text_rounded_corner"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:inputType="text|textMultiLine"
        android:padding="12dp"
        android:editable="true"
        android:gravity="left" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_start_writing"
        android:id="@+id/imageViewStartWriting"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
