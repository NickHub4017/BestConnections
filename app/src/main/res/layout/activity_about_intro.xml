<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:id="@+id/drawer_layout"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.syncbridge.bestconnections.AboutIntroActivity"
android:background="@mipmap/ic_ab_background">

<FrameLayout
    android:id="@+id/content_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/borders"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:id="@+id/relativeLayout1">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:id="@+id/textView1"
                    android:layout_toStartOf="@+id/imageView1"
                    android:text="Best Connections “How To” Video"
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:textSize="20sp" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_ab_arrow_left"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/imageView1"
                    android:layout_alignBottom="@+id/textView1" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/borders"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:id="@+id/relativeLayout2">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:id="@+id/textView2"
                    android:layout_toStartOf="@+id/imageView2"
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:text="About Connect4Life" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_ab_arrow_left"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/imageView2"
                    android:layout_alignBottom="@+id/textView2" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/borders"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:id="@+id/relativeLayout3">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:id="@+id/textView3"
                    android:layout_toStartOf="@+id/imageView3"
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:text="Connect4Life News" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_ab_arrow_left"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/imageView3"
                    android:layout_alignBottom="@+id/textView3" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/borders"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:id="@+id/relativeLayout4">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:id="@+id/textView4"
                    android:layout_toStartOf="@+id/imageView4"
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:text="Overview of Connect4Life" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_ab_arrow_left"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/imageView4"
                    android:layout_alignBottom="@+id/textView4" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/borders"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:id="@+id/relativeLayout5">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:id="@+id/textView5"
                    android:layout_toStartOf="@+id/imageView5"
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:text="Endorsements" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_ab_arrow_left"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/imageView5"
                    android:layout_alignBottom="@+id/textView5" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/borders"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:id="@+id/relativeLayout6">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:id="@+id/textView6"
                    android:layout_toStartOf="@+id/imageView6"
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:text="Order Connect4Life Resources" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_ab_arrow_left"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/imageView6"
                    android:layout_alignBottom="@+id/textView6" />

            </RelativeLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="20dp"
                android:paddingLeft="10dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CONNECT 4 LIFE"
                        android:id="@+id/textView9" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PO BOX 297"
                        android:id="@+id/textView10" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ALTON"
                        android:id="@+id/textView11" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GU34 9GN"
                        android:id="@+id/textView12" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TEL: 07767 804333"
                        android:id="@+id/textView17" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="EMAIL: contactus@connect4life.org.uk"
                        android:id="@+id/textView18" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>

</FrameLayout>

<!-- The navigation drawer -->
<include layout="@layout/layout_navigation_drawer" android:id="@+id/left_drawer"/>

</android.support.v4.widget.DrawerLayout>
