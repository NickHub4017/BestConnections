<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.syncbridge.bestconnections.AboutC4LActivity"
    android:background="@mipmap/ic_ab_background">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView4" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="“I believe that God has given this message for our generation in a simple and fresh way – connection with Him brings life. ”"
                android:id="@+id/textView7"
                android:textSize="25sp"
                android:gravity="center_horizontal"
                android:textAlignment="gravity"
                android:textStyle="italic" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Olaf Fogwill, Connect4Life"
                android:id="@+id/textView15"
                android:layout_below="@+id/textView7"
                android:textStyle="bold"
                android:textSize="25sp"
                android:gravity="center_horizontal"
                android:textAlignment="gravity" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView7"
                android:layout_below="@+id/textView15"
                android:src="@mipmap/ic_ab_olaf"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="With extensive experience of Christian leadership at senior levels in para-church and local church, Olaf’s vision is to see a nation of ‘churches, leaders and Christians connected to the the Person, Power and Mission of Christ’. God impressed the message of ‘connection’ on him in 2008 from John 15:17, since when the resources of C4L have been developed for use in the wider church. “This life to the full brings with it a clear sense of identity, value and purpose from which people derive much needed security, happiness and motivation. The resources of C4L are easily used and understood and can mobilise your church to impact your community for Christ.”"
                android:id="@+id/textView16"
                android:layout_below="@+id/imageView7"
                android:textSize="25sp" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
